<PopupLabel>:
    # Define o tamanho baseado no conteúdo do texto, com um padding
    size_hint: None, None
    size: self.texture_size[0] + dp(24), self.texture_size[1] + dp(12)
    
    # Posiciona na parte inferior central da tela
    pos_hint: {'center_x': 0.5}
    y: dp(30)
    
    # Começa invisível
    opacity: 0
    
    canvas.before:
        Color:
            rgba: root.bg_color[0], root.bg_color[1], root.bg_color[2], root.bg_color[3] * self.opacity # Cor de fundo customizável
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [dp(10)]