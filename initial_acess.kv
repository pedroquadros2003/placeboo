

<InitialAccessScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(20)
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 1 # Light gray background
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'Welcome to Placebo'
            font_size: '24sp'
            color: 0, 0, 0, 1
            size_hint_y: 0.2

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.8
            spacing: dp(15)
            pos_hint: {'center_y': 0.5}

            Button:
                text: 'I am a patient'
                font_size: '18sp'
                on_press: root.on_profile_selection('patient'); app.manager.push('sign_up')

            Button:
                text: 'I am a doctor/caregiver'
                font_size: '18sp'
                on_press: root.on_profile_selection('doctor'); app.manager.push('sign_up')

<SignUpScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 1
            Rectangle:
                pos: self.pos
                size: self.size

        # [R002] Top bar with back button
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'Sign Up'
                    with_previous: True
                    on_release: app.manager.pop()

        # ScrollView to accommodate all fields, especially on smaller screens
        ScrollView:
            GridLayout:
                cols: 1
                padding: dp(20)
                spacing: dp(15)
                size_hint_y: None
                height: self.minimum_height

                # Common fields [R003] & [R004]
                TextInput:
                    id: name_input
                    hint_text: 'Name'
                TextInput:
                    id: email_input
                    hint_text: 'Email Address'
                TextInput:
                    id: password_input
                    hint_text: 'Password'
                    password: True

                # [R004] Doctor/Caregiver specific checkbox
                BoxLayout:
                    size_hint_y: None
                    height: dp(48)
                    # This layout only appears if the profile is 'doctor'
                    opacity: 1 if root.profile_type == 'doctor' else 0
                    disabled: True if root.profile_type != 'doctor' else False
                    Label:
                        text: 'I am also a patient'
                        color: 0,0,0,1
                    CheckBox:
                        on_active: root.is_also_patient = self.active

                # [R003] & [R004] Patient specific fields
                # These fields appear if profile is 'patient' OR if 'doctor' checks the box
                BoxLayout:
                    orientation: 'vertical'
                    spacing: dp(15)
                    size_hint_y: None
                    height: self.minimum_height
                    opacity: 1 if root.profile_type == 'patient' or root.is_also_patient else 0
                    disabled: False if root.profile_type == 'patient' or root.is_also_patient else True

                    TextInput:
                        id: height_input
                        hint_text: 'Height (cm)'
                        input_filter: 'int'
                    TextInput:
                        id: dob_input
                        hint_text: 'Date of Birth (YYYY-MM-DD)'
                    TextInput:
                        id: sex_input
                        hint_text: 'Sex'

                Button:
                    text: 'Create Account'
                    size_hint_y: None
                    height: dp(48)
                    on_press: root.create_account()
