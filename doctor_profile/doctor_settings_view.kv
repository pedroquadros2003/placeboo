#: import box_layout_with_action_bar auxiliary_classes.box_layout_with_action_bar

<DoctorSettingsView>:
    BoxLayoutWithActionBar:
        title: 'Configurações'
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 1
            Rectangle:
                pos: self.pos
                size: self.size
        
        BoxLayout:
            orientation: 'vertical'
            padding: dp(20)
            spacing: dp(20)

            Button:
                text: 'Sair da Conta'
                size_hint_y: None
                height: dp(48)
                on_press: root.logout()
            
            Button:
                text: 'Mudar Senha'
                size_hint_y: None
                height: dp(48)
                on_press: root.change_password()

            Button:
                text: 'Deletar Conta'
                size_hint_y: None
                height: dp(48)
                background_color: 1, 0.2, 0.2, 1 # Red color to indicate danger
                on_press: root.delete_account()
