#: import box_layout_with_action_bar auxiliary_classes.box_layout_with_action_bar

<GraphViewScreen>:
    BoxLayoutWithActionBar:
        title: 'Relat√≥rio: ' + root.metric_name
        
        BoxLayout:
            orientation: 'vertical'
            padding: [0, dp(10), 0, 0] # Added top padding

            ScrollView:
                canvas.before:
                    Color:
                        rgba: 0.95, 0.95, 0.95, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                GridLayout:
                    id: report_grid
                    cols: 2
                    size_hint_y: None
                    height: self.minimum_height
                    padding: [dp(10), dp(20), dp(10), dp(10)] # Increased top padding
                    spacing: dp(15)