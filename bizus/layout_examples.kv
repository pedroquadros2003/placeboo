<PageLayoutExample@PageLayout>:
# Use canvas.before para desenhar o fundo
    BoxLayoutExample:
        canvas.before:  
            Color:
                rgb: 0, 0, 0
            Rectangle:
                size: self.size
                pos: self.pos
                
    ScrollViewExample:
        canvas.before:
            Color:
                rgb: 0, 0, 0
            Rectangle:
                size: self.size
                pos: self.pos

<StackLayoutExampleDP>:
    ##left-right, top-bottom
    orientation: "rl-bt"
    padding: ("20dp", "20dp", "20dp", "20dp")
    spacing: "10dp", "10dp"


<StackLayoutExample>:
    ##left-right, top-bottom
    orientation: "rl-bt"
    padding: (self.width*0.05, self.height*0.05, self.width*0.05, self.height*0.05)
    spacing: self.width*0.01, self.height*0.001

<GridLayoutExample@GridLayout>: 

    cols:3

    Button:
        text: "A"
    
    Button:
        text: "A"

    Button:
        text: "A"

    BoxLayoutExample:

    Button:
        text: "A"

    Button:
        text: "A"


<AnchorLayoutExample>:

# âncora se aplica a todos os layouts filhos

    # right, left, center
    anchor_x: "center"

    # bottom, top, center
    anchor_y: "top"

    
    Button:
        text: "A"
        size_hint: .1, .5

    BoxLayout:
        size_hint: .3, .4
        Button:
            text: "A"
        Button:
            text: "B"
    

<BoxLayoutExample>: 
    orientation: "horizontal"
    Button:
        text: "A"
        size_hint: .8 , .5 
## porcentagem do tamanho do botão considerando 0 alterações
    Button:
        text: "B"
        size_hint: .5, None 
## None permite que a gente fixe o tamanho do botão
        height: "60dp"
        # x, center_x, right
        # y, center_y, top
        pos_hint: { "center_y": 0.25 }
    BoxLayout:
        spacing: self.width * 0.1  # 10% da largura do BoxLayout
        Button:
            text: "B1"
        Button:
            text: "B2"

<ImageButtonExample@BoxLayout>:
    padding: "20dp"
    Button:
        text: "Sou uma imagem!"
        # Remove a cor de fundo padrão do Kivy
        background_color: 0, 0, 0, 0
        # Define a imagem para o estado normal
        background_normal: 'resources_kivy1/images/cake.png'
        # Define a imagem para o estado pressionado (pode ser a mesma ou outra)
        background_down: 'resources_kivy1/images/cake_pressed.png'




<ScrollViewExample@ScrollView>:
    ##só pode ter um widget filhos
    StackLayoutExampleDP: 
        size_hint: 1, None
        height: self.minimum_height



<MainWidget>:
    Button:
        text: "hello" 
        size: "40dp", "40dp"  # Same physical size, finger
        pos: "20dp", "20dp"   # dp são density independent pixels
    Label:
        text: "hello"
        color: 1, 0.5, 0.3, 1  # rgba, between 0 and 1
        size: "40dp", "40dp"  # Same physical size, finger
        pos: "200dp", "200dp"