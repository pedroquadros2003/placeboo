<ImagesExample@GridLayout>: 
    rows: 3

    Image:
        source: "images/cake.jpg"
        fit_mode: "fill"      # preenche ignorando proporção
        #allow_stretch: True
        #keep_ratio: False



<WidgetsExample>: 
    rows: 3

    cols: 4
    Button: 
        text: "Clique aqui"
        on_press: root.on_button_click() # refere-se ao widget de cima
        disabled: not root.counter_active
    Label: 
        text: root.my_text
        font_name: "fonts/Lcd.ttf"
        font_size: "100dp"
        color: 1, 1, 1, 1

    ToggleButton:
        text: "OFF"
        on_state: root.on_toggle_button_state(self)
        ## Estamos passando o próprio widget como argumento

    Switch:
        id: my_switch
        on_active: root.on_switch_active(self)
        ## sempre que houver mudança, clique, ele chama
        ## a função
        size_hint: 1, 1 ## diz respeito a hitbox do widget
        width: "200dp"
        active: True

    Slider:
        id: my_slider 
        ## podemos nos referir a esse id dentro do
        ## próprio kivy, automatic binding 
        orientation: "horizontal"
        min: 0
        max: 10 
        value: 6.3
        on_value: root.on_slider_value(self)
        disabled: not my_switch.active

    Label:
        text: root.slider_number
        color: 1, 0.1, 0.2, 1
        font_size: "40dp"

    Label: 
        text: str(my_slider.value)
        color: 0.1, 1, 0.2, 1
        font_size: "10dp"
    
    BoxLayout:
        orientation: "vertical"
        Label:
            text: str( int( my_slider.value  ))
        ProgressBar:
            size_hint: 0.7, 1
            pos_hint: { "center_y": 0.5 , "center_x": 0.5}
            max: 10
            value: my_slider.value

    TextInput:
        id: my_text_input
        multiline: False
        on_text_validate: root.on_text_validate(self)
        ## quando o texto for validado, chama a função
        text: "foo"  

    Label:
        text: root.input_text      
