#: import  box_layout_with_action_bar box_layout_with_action_bar
#: import  spinner_with_arrow spinner_with_arrow

<InitialAccessScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(20)
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 1 # Light gray background
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'Welcome to Placebo'
            font_size: '24sp'
            color: 0, 0, 0, 1
            size_hint_y: 0.2

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.8
            spacing: dp(15)
            pos_hint: {'center_y': 0.5}

            Button:
                text: 'I am a patient'
                font_size: '18sp'
                on_press: root.on_profile_selection('patient'); app.manager.push('login')

            Button:
                text: 'I am a doctor/caregiver'
                font_size: '18sp'
                on_press: root.on_profile_selection('doctor'); app.manager.push('login')

<LoginScreen>:
    BoxLayoutWithActionBar:
        title: 'Login'
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 1
            Rectangle:
                pos: self.pos
                size: self.size
        GridLayout:
            cols: 1
            padding: dp(20)
            spacing: dp(15)

            TextInput:
                id: login_email
                hint_text: 'Email Address'
                size_hint_y: None
                height: dp(48)

            TextInput:
                id: login_password
                hint_text: 'Password'
                password: True
                size_hint_y: None
                height: dp(48)

            Button:
                text: 'Login'
                size_hint_y: None
                height: dp(48)
                on_press: root.do_login(login_email.text, login_password.text)

            Button:
                text: "Don't have an account? Sign Up"
                size_hint_y: None
                height: dp(48)
                background_color: (0,0,0,0) # Transparent background
                color: (0.2, 0.4, 0.8, 1) # Blue link-like color
                on_press: root.go_to_signup()

<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(20)
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            text: 'Entrar'
            font_size: '24sp'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

<SignUpScreen>:
    BoxLayoutWithActionBar:
        title: 'Sign Up'
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 1
            Rectangle:
                pos: self.pos
                size: self.size

        # ScrollView to accommodate all fields, especially on smaller screens
        ScrollView:
            GridLayout:
                cols: 1
                padding: dp(20)
                spacing: dp(15)
                size_hint_y: None
                height: self.minimum_height

                # Common fields [R003] & [R004]
                TextInput:
                    id: name_input
                    size_hint_y: None
                    height: dp(48)
                    hint_text: 'Name'
                TextInput:
                    id: email_input
                    size_hint_y: None
                    height: dp(48)
                    hint_text: 'Email Address'
                TextInput:
                    id: password_input
                    size_hint_y: None
                    height: dp(48)
                    hint_text: 'Password'
                    password: True

                # [R004] Doctor/Caregiver specific checkbox
                BoxLayout:
                    size_hint_y: None
                    height: dp(48)
                    # This layout only appears if the profile is 'doctor'
                    opacity: 1 if root.profile_type == 'doctor' else 0
                    disabled: True if root.profile_type != 'doctor' else False
                    Label:
                        text: 'I am also a patient'
                        size_hint_x: 0.8
                        color: 0,0,0,1
                    Switch:
                        on_active: root.is_also_patient = self.active
                        size_hint_x: 0.2

                # [R003] & [R004] Patient specific fields
                # These fields appear if profile is 'patient' OR if 'doctor' checks the box
                BoxLayout:
                    orientation: 'vertical'
                    spacing: dp(15)
                    size_hint_y: None
                    height: self.minimum_height
                    opacity: 1 if root.profile_type == 'patient' or root.is_also_patient else 0
                    disabled: False if root.profile_type == 'patient' or root.is_also_patient else True

                    TextInput:
                        id: height_input
                        size_hint_y: None
                        height: dp(48)
                        hint_text: 'Height (cm)'
                        input_filter: 'int'
                    BoxLayout:
                        orientation: 'horizontal'
                        spacing: dp(10)
                        size_hint_y: None
                        height: dp(48)

                        SpinnerWithArrow:
                            id: day_spinner
                            text: 'Day'
                            # Initially disabled, will be enabled and populated by the python function
                            values: []
                            disabled: True

                        SpinnerWithArrow:
                            id: month_spinner
                            text: 'Month'
                            values: ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December']
                            on_text: root.update_day_spinner()

                        SpinnerWithArrow:
                            id: year_spinner
                            text: 'Year'
                            values: [str(i) for i in range(2024, 1919, -1)]
                            on_text: root.update_day_spinner()
                    SpinnerWithArrow:
                        id: sex_input
                        text: 'Sex'
                        values: ['Masculine', 'Feminine', 'Other']

                Button:
                    text: 'Create Account'
                    size_hint_y: None
                    height: dp(48)
                    on_press: root.create_account()
