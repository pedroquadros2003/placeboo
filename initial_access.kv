#: import box_layout_with_action_bar auxiliary_classes.box_layout_with_action_bar
#: import spinner_with_arrow auxiliary_classes.spinner_with_arrow

<InitialAccessScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(20)
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 1 # Light gray background
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'Bem-vindo ao Placebo'
            font_size: '24sp'
            color: 0, 0, 0, 1
            size_hint_y: 0.2

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.8
            spacing: dp(15)
            pos_hint: {'center_y': 0.5}

            Button:
                text: 'Sou paciente'
                font_size: '18sp'
                on_press: root.on_profile_selection('patient'); app.manager.push('login')

            Button:
                text: 'Sou médico/cuidador'
                font_size: '18sp'
                on_press: root.on_profile_selection('doctor'); app.manager.push('login')

<LoginScreen>:
    BoxLayoutWithActionBar:
        title: 'Login'
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 1
            Rectangle:
                pos: self.pos
                size: self.size
        GridLayout:
            cols: 1
            padding: dp(20)
            spacing: dp(15)

            TextInput:
                id: login_user
                hint_text: 'Usuário'
                size_hint_y: None
                height: dp(48)
                multiline: False

            TextInput:
                id: login_password
                hint_text: 'Senha'
                password: True
                size_hint_y: None
                height: dp(48)
                multiline: False

            Button:
                text: 'Entrar'
                size_hint_y: None
                height: dp(48)
                on_press: root.do_login(login_user.text, login_password.text)

            Button:
                text: "Não tem uma conta? Cadastre-se"
                size_hint_y: None
                height: dp(48)
                background_color: (0,0,0,0) # Transparent background
                color: (0.2, 0.4, 0.8, 1) # Blue link-like color
                on_press: root.go_to_signup()

<SignUpScreen>:
    BoxLayoutWithActionBar:
        title: 'Cadastro'
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 1
            Rectangle:
                pos: self.pos
                size: self.size

        # ScrollView to accommodate all fields, especially on smaller screens
        ScrollView:
            GridLayout:
                cols: 1
                padding: dp(20)
                spacing: dp(15)
                size_hint_y: None
                height: self.minimum_height

                # Common fields [R003] & [R004]
                TextInput:
                    id: name_input
                    size_hint_y: None
                    height: dp(48) 
                    hint_text: 'Nome'
                    multiline: False
                TextInput:
                    id: user_input
                    size_hint_y: None
                    height: dp(48) 
                    hint_text: 'Usuário'
                    multiline: False
                TextInput:
                    id: password_input
                    size_hint_y: None
                    height: dp(48)
                    hint_text: 'Senha'
                    password: True
                    multiline: False

                # [R004] Doctor/Caregiver specific checkbox
                BoxLayout:
                    size_hint_y: None
                    height: dp(48)
                    # This layout only appears if the profile is 'doctor'
                    opacity: 1 if root.profile_type == 'doctor' else 0
                    disabled: True if root.profile_type != 'doctor' else False
                    Label:
                        text: 'Também sou paciente'
                        size_hint_x: 0.8
                        color: 0,0,0,1
                    Switch:
                        id: is_also_patient_switch
                        on_active: root.is_also_patient = self.active
                        size_hint_x: 0.2

                # [R003] & [R004] Patient specific fields
                # These fields appear if profile is 'patient' OR if 'doctor' checks the box
                BoxLayout:
                    orientation: 'vertical'
                    spacing: dp(15)
                    size_hint_y: None
                    height: self.minimum_height
                    opacity: 1 if root.profile_type == 'patient' or root.is_also_patient else 0
                    disabled: False if root.profile_type == 'patient' or root.is_also_patient else True

                    TextInput:
                        id: height_input
                        size_hint_y: None
                        height: dp(48) 
                        hint_text: 'Altura (cm)'
                        input_filter: 'int'
                        multiline: False
                    BoxLayout:
                        orientation: 'horizontal'
                        spacing: dp(10)
                        size_hint_y: None
                        height: dp(48)

                        TextInput:
                            id: day_input
                            hint_text: 'Dia'
                            input_filter: 'int'
                            multiline: False
                            on_text: root.enforce_text_limit(self, 2)

                        SpinnerWithArrow:
                            id: month_spinner
                            text: 'Mês'
                            values: ['Janeiro', 'Fevereiro', 'Março', 'Abril', 'Maio', 'Junho', 'Julho', 'Agosto', 'Setembro', 'Outubro', 'Novembro', 'Dezembro']

                        SpinnerWithArrow:
                            id: year_spinner
                            text: 'Ano'
                            values: [str(i) for i in range(2024, 1919, -1)]
                    SpinnerWithArrow:
                        id: sex_input
                        text: 'Sexo'
                        values: ['Masculino', 'Feminino', 'Outro']

                Button:
                    text: 'Criar Conta'
                    size_hint_y: None
                    height: dp(48)
                    on_press: root.create_account()
