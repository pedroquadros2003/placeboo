#:kivy 2.0.0

<MyScreenManager>:
    # Telas de acesso inicial
    InitialAccessScreen:
        name: 'initial_access'
    LoginScreen:
        name: 'login'
    SignUpScreen:
        name: 'sign_up'

    # Telas principais após o login
    PatientHomeScreen:
        name: 'patient_home'
    DoctorHomeScreen:
        name: 'doctor_home'

    # Telas de menu e configurações que são "empilhadas" sobre as telas principais
    PatientMenuScreen:
        name: 'patient_menu'
    DoctorMenuScreen:
        name: 'doctor_menu'
    PatientAppSettingsScreen:
        name: 'patient_app_settings'
    ManageDoctorsScreen:
        name: 'manage_doctors'
    DoctorSettingsScreen:
        name: 'doctor_settings'
    ChangePasswordScreen:
        name: 'change_password'

    # Tela para visualização de gráficos
    GraphViewScreen:
        name: 'graph_view'
